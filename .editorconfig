root = true
[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
[*.md]
trim_trailing_whitespace = false
[*.yml]
indent_size = 2
[**.vue]
indent_style = space
indent_size = 2
[**.js]
indent_style = space
indent_size = 2
[**.scss]
indent_style = tab
indent_size = 2
[**.css]
indent_style = tab
indent_size = 2
[**.php]
indent_style = space
indent_size = 4
[**.blade.php]
indent_style = space
indent_size = 2
[**.html]
indent_style = tab
indent_size = 2